<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="TrayPas">
	<tstamp>
   		<format property="TODAY" pattern="yyyy-MM-dd HH:mm" />
    </tstamp>
    <target name="create_run_jar">
    	<javac srcdir="src" destdir="bin"/>
    	<delete file="bin/UploadVersion.class"/>
        <jar destfile="TrayPass.jar">
            <manifest>
            	<attribute name="Main-Class" value="traypass.Launcher"/>
            	<attribute name="Rsrc-Main-Class" value="traypass.Launcher" />
                <attribute name="Class-Path" value="."/>
            	<attribute name="Implementation-Version" value="${TODAY}"/> 
            </manifest>
            <fileset dir="bin" />
        </jar>
    	<echo message="version ${TODAY}" />
    </target>
</project>